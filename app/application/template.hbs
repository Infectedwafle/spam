<div class="navbar">
	<div class="brand">
		SPAM
	</div>
</div>
<div class="container-fluid">
	<div class="row">
		<div class="col-3">
			<div>
				Number Of Processes
			</div>
			<div>
				{{input class='config-input' value=numberOfProcesses}}
			</div>
		</div>
		<div class="col-2">
			<div>
				Page/Frame Size (bytes)
			</div>
			<div>
				{{input class='config-input' value=pageFrameSize}}
			</div>
		</div>
		<div class="col-2">
			<div>
				Page/Frame Size (bits)
			</div>
			<div>
				{{input class='config-input' value=pageFrameSizeBits}}
			</div>
		</div>
		<div class="col-2">
			<div>
				Memory Size (bytes)
			</div>
			<div>
				{{input class='config-input' value=memorySize}}
			</div>
		</div>
		<div class="col-2">
			<div>
				Memory Size (bits)
			</div>
			<div>
				{{input class='config-input' value=memorySizeBits}}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-3">
			<div>
				Instructions Per Process
			</div>
			<div>
				{{input class='config-input' value=instructionsPerProcess}}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-3">
			<div>
				Actions
			</div>
			<div class="row">
				<div class="col-sm">
					<button class="action-buttons" {{action 'generateInstructions' pageFrameSize memorySize numberOfProcesses instructionsPerProcess}}>Generate Instructions</button>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container-fluid">
	<div class="row">
		<div class="col-3">
			<div class="row {{if showInstructions 'show-instructions'}}">
				{{#if showInstructions}}
					<div class="col-1">
							
					</div>
					<div class="col-2">
						Type:	
					</div>
					<div class="col-3">
						Process Id:	
					</div>
					<div class="col-3">
						Code Size:	
					</div>
					<div class="col-3">
						Data Size:	
					</div>
					{{#each system.instructions as |instruction index|}}
						<div class="col-1">
							{{#if (eq instructionCounter index)}}
								*
							{{/if}}	
						</div>
						<div class="col-2">
							{{instruction.type}}
						</div>
						<div class="col-3">
							{{instruction.processId}}
						</div>
						<div class="col-3">
							{{or instruction.codeSize instruction.stackSize instruction.heapSize}}
						</div>
						<div class="col-3">
							{{instruction.dataSize}}
						</div>
					{{/each}}
				{{else}}
					<div class="col-12">
						{{textarea class='instructions-textarea' value=instructions rows=25}}
					</div>
				{{/if}}
			</div>
			<div class="row">
				<div class="col-6">
					<button class="action-buttons" {{action 'loadConfig'}}>Load Config</button>
				</div>
				<div class="col-6">
					<button class="action-buttons" {{action 'toggleEdit'}}>Toggle Instructions View</button>
				</div>
				<div class="col-4">
					<button class="action-buttons" {{action 'reverseInstruction' instructionCounter}}>Back</button>
				</div>
				<div class="col-4">
					<button class="action-buttons" {{action 'loadInstruction' instructionCounter}}>Run</button>
				</div>
				<div class="col-4">
					<button class="action-buttons" {{action 'loadAllInstruction' instructionCounter}}>Run All</button>
				</div>
			</div>
			<div class="row">
				{{#each system.logView as |entry|}}
					<div class="col-12 {{if (eq entry.type 'error') 'log-error'}} {{if (eq entry.type 'info') 'log-info'}} {{if (eq entry.type 'warning') 'log-warning'}}">
						{{entry.message}}
					</div>
				{{/each}}
			</div>
		</div>
		<div class="col-9">
			{{memory-simulator
				system=system
			}}
		</div>
	</div>
</div>